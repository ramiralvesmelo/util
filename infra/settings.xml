<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd">

  <!-- ==========================================================
       PluginGroups       

       Lista extra de grupos de plugins Maven.
       Aqui adicionamos o SonarQube Scanner para rodar
       "mvn sonar:sonar" sem precisar informar o groupId completo.
       ========================================================== -->
  <pluginGroups>
    <pluginGroup>org.sonarsource.scanner.maven</pluginGroup>
  </pluginGroups>

  <profiles>
    <!-- ========================================================
         Profile: Maven Central
         
         Configuração explícita do repositório central Maven.
         Normalmente o Maven já tem, mas declarar garante que
         não haverá bloqueio em ambientes restritos.
         ======================================================== -->
    <profile>
      <id>maven-central</id>
      <repositories>
        <repository>
          <id>central</id>
          <name>Maven Central Repository</name>
          <url>https://repo1.maven.org/maven2</url>
          <releases><enabled>true</enabled></releases>
          <snapshots><enabled>false</enabled></snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>central</id>
          <name>Maven Central Plugins</name>
          <url>https://repo1.maven.org/maven2</url>
          <releases><enabled>true</enabled></releases>
          <snapshots><enabled>false</enabled></snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>

    <!-- ========================================================
         Profile: GitHub Packages (repositório privado/util)
         
         Permite baixar dependências publicadas em:
         https://maven.pkg.github.com/ramiralvesmelo/util
         
         - "releases" e "snapshots" habilitados
         - Também habilitado como pluginRepository (caso publique
           plugins no GitHub Packages no futuro).
         ======================================================== -->
    <profile>
      <id>github-ramir-util</id>
      <repositories>
        <repository>
          <id>github-ramir-util</id>
          <url>https://maven.pkg.github.com/ramiralvesmelo/util</url>
          <releases><enabled>true</enabled></releases>
          <snapshots><enabled>true</enabled></snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>github-ramir-util</id>
          <url>https://maven.pkg.github.com/ramiralvesmelo/util</url>
          <releases><enabled>true</enabled></releases>
          <snapshots><enabled>true</enabled></snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>

  <!-- ==========================================================
       Active Profiles

       Ativa os dois perfis por padrão:
         - Maven Central
         - GitHub Packages
       Assim, qualquer build terá acesso a ambos os repositórios.
       ========================================================== -->
  <activeProfiles>
    <activeProfile>maven-central</activeProfile>
    <activeProfile>github-ramir-util</activeProfile>
  </activeProfiles>

  <!-- ==========================================================
       Servers
       
       Armazena credenciais para repositórios privados.
       O <id> deve bater com o <id> do repositório acima.
       - username: conta GitHub
       - password: GitHub Personal Access Token (PAT)
       
       Recomenda-se trocar [GIT_TOKEN_PAT] por variável
       de ambiente em CI/CD (ex.: ${env.GITHUB_TOKEN})
       ========================================================== -->
  <servers>
    <server>
      <id>github-ramir-util</id>
      <username>ramiralvesmelo</username>
      <password>[GIT_TOKEN_PAT]</password>
    </server>
  </servers>

</settings>
